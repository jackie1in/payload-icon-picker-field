{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "incremental": true,
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "preserve",
    "target": "ES2022",
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "src/**/*"
  ],
}
